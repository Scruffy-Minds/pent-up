<!DOCTYPE html>
<html lang="en">
<%- include('partials/head'); -%>
<body>

    <div class="container">
    <%- include('partials/mobile-menu'); -%>

        <%- include('partials/header-logo'); -%>
        <%- include('partials/menubar'); -%>
        <div class="news row jc-center">
            <span><%= linkData.news %></span>
        </div>

        <div id="streaming" class="row jc-center">
            <%const streamers = linkData.sites.filter(x => x.type === 'streaming'); streamers.forEach((v, i, a) => { if(v.active === true) { const primary = (v.id === 'applemusic' || v.id === 'spotify') ? ' primary' : ' hidden';%>
            <%-
            `<a href="${v.url}" target="${v.target}">
                <picture>
                    <source srcset="/images/buttons/streamers/${v.id}_btn.webp" type="image/webp">
                    <img id="${v.id}" class="listen-btn bkg-glass glow button${primary}"
                        src="/images/buttons/streamers/${v.id}_btn.png" alt="Listen on ${v.name}">
                </picture>
            </a>`
            %><%}});%>
            <span class="more row jc-center">Tap here for more streaming services</span>
        
        </div>

        <div id="buttons" class="buttons">
            <%const websites = linkData.sites.filter(x => x.type === 'website'); websites.forEach((v, i, a) => { if(v.active === true) {%>
            <%- `<a href="${v.url}" target="${v.target}"><div class="bkg-glass glow button" id="${v.id}"><span>${v.name}</span></div></a>`%><%}%><%})%>
        
        </div>
        <%- include('partials/footer'); -%>
    </div>

</body>
</html>